		<fileSet>
			<directory>ailib</directory>
			<outputDirectory>ailib</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>sbin</directory>

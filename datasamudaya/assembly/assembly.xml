<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>jdk21</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<unpack>false</unpack>
			<excludes>
				<exclude>org.springframework.ai:*</exclude>
				<exclude>org.springframework:spring-core</exclude>
				<exclude>org.springframework:spring-context</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>ailib</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <unpack>false</unpack>
            <includes>
            	<include>org.springframework.ai:spring-ai-core</include> 
            	<include>org.springframework.ai:spring-ai-ollama</include>
            	<include>org.springframework.boot:spring-boot</include>
            	<include>org.springframework:spring-web</include>
            	<include>org.springframework:spring-webflux</include>
            	<include>org.springframework:spring-context</include>
            	<include>org.springframework:spring-core</include>
            	<include>com.fasterxml.jackson.core:jackson-databind</include>
            	<include>com.fasterxml.jackson.datatype:jackson-datatype-jsr310</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>ailib</outputDirectory>
            <includes>
            	<include>org.springframework.boot:spring-boot:3.2.3</include>            	
            </includes>
        </dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>scripts</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>target/site/apidocs</directory>
			<outputDirectory>docs</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>dockerdatasamudayacontainer</directory>
			<outputDirectory>devops/docker/dockerdatasamudayacontainer</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
			<includes>
				<include>Dockerfile</include>
				<include>datasamudayates.properties</include>
				<include>container.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>dockerdatasamudayats</directory>
			<outputDirectory>devops/docker/dockerdatasamudayats</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
			<includes>
				<include>Dockerfile</include>
				<include>datasamudayats.properties</include>
				<include>taskscheduler.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>dockerdatasamudayatss</directory>
			<outputDirectory>devops/docker/dockerdatasamudayatss</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
			<includes>
				<include>Dockerfile</include>
				<include>datasamudayatss.properties</include>
				<include>taskschedulerstream.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>dockeryarntss</directory>
			<outputDirectory>devops/docker/dockeryarntss</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>dockerzk</directory>
			<outputDirectory>devops/docker/dockerzk</outputDirectory>
			<fileMode>0777</fileMode>
			<directoryMode>0777</directoryMode>
		</fileSet>
		<fileSet>
			<directory>kubermultipod</directory>
